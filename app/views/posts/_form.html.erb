<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, :placeholder => 'Fearless Rails Deployment' %>
  </div>

  <div class="field">
    <%= f.label :author %><br>
    <%= f.text_field :author, :placeholder => 'Zachary Danger Campbell' %>
  </div>

  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body, :placeholder => 'Lots of boring text about Rails deployments' %>
  </div>
  <div class="actions">
    <%= f.submit nil, :class => 'button' %>
  </div>
<% end %>
